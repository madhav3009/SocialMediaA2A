 <link rel="stylesheet" href="/css/comment.css">

<li class="diffcomment" id="comment-<%= comment._id %>">
        <div>
     
           
           
                <% if (locals.user && locals.user.id == comment.user.id){ %>
                    <img  class="commentavatar " src="<%= user.avatar %>" alt="<%= user.name %>" width="100">
         
                <small>
                    <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </small>
                <% } %>
                <small>
                        <%= comment.user.name %>
                    </small>
            <br /> <br />    
                <%= comment.content %>
                <br>
                

             <!-- display the likes of this comment, if the user is logged in, then show the link to toggle likes, else, just show the count -->
            <!-- study about the data attribute -->
            <small>
                     <% if (locals.user){ %>
                        <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                        <%= comment.likes.length %> <i class="fa fa-thumbs-up " aria-hidden="true"></i> 
                        </a>
                    <% }
                    else{ %>
                        <%= comment.likes.length %>  <i class="fa fa-thumbs-up " aria-hidden="true"></i> 
           
                    <% } %>
                </small>
        
           
            </div>    

</li> 

